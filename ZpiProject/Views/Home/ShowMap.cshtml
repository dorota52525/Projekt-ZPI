@using Newtonsoft.Json
@using ZpiProject.Helpers;
@model ClassLibrary.MapData

<div class="row">
    <div class="col-md-8">
        <div id="map"></div>
    </div>
    <div class="col-md-4">
        <div id="form-pollutions">
            <div class="row">
                <p style="font-size: 20px">Zanieczyszenia</p>
                <ul style="list-style-type: none" id="list-form-pollutions">
                    <li><input id="aqIndex" type="radio" name="pollution" value="aqIndex" checked="checked"><label for="aqIndex"> Polski indeks jakości powietrza </label></li>
                    <li><input id="SO2" type="radio" name="pollution" value="SO2"><label for="SO2" onclick="">SO<sub>2</sub></label></li>
                    <li><input id="PM10" type="radio" name="pollution" value="PM10"><label for="PM10">pył PM10</label></li>
                    <li><input id="CO" type="radio" name="pollution" value="CO"><label for="CO">CO</label></li>
                    <li><input id="PM2.5" type="radio" name="pollution" value="PM2.5"><label for="PM2.5">pył PM2,5</label></li>
                    <li><input id="O3" type="radio" name="pollution" value="O3"><label for="O3">O<sub>3</sub></label></li>
                    <li><input id="NO2" type="radio" name="pollution" value="NO2"><label for="NO2">NO<sub>2</sub></label></li>
                    <li><input id="C6H6" type="radio" name="pollution" value="C6H6"><label for="C6H6">benzen</label></li>
                </ul>
            </div>
            <div class="row">
                <div id="legend"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        window.model = @Html.Raw(JsonConvert.SerializeObject(Model, new JsonSerializerSettings
                       {
                           ContractResolver = new CamelCase()
                       }));
    </script>
    <script src="~/js/map.js" asp-append-version="true"></script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCimUq5fQ0Z5sdxy6WwG5sP9FTJO6XqQiI&callback=initMap">
    </script>
}